%main

iarr ruleset 8
iarr curr 220
iarr next 220
int n 0
int val 0
int num1 0
int num2 0
int num3 0
int c 0

swap /ruleset/0 0
swap /ruleset/1 1
swap /ruleset/2 1
swap /ruleset/3 1
swap /ruleset/4 1
swap /ruleset/5 0
swap /ruleset/6 1
swap /ruleset/7 1

!clear
doif $n < 220
	swap /curr/$n 0
	sum n 1
	goto clear
fin
swap /curr/100 1

swap n 1

!genesis
@except last and 0
doif $n < 219
	swap c $n

@n-1
	sub c 1
	swap num1 /curr/$c
@n
	swap num2 /curr/$n
@n+1
	sum c 2
	swap num3 /curr/$c

@print $num1 $num2 $num3 `

	gosub value $num1 $num2 $num3 > val
	swap /next/$n /ruleset/$val
	sum n 1
	goto genesis
fin

swap num1 /curr/219
swap num2 /curr/0
swap num3 /curr/1
gosub value $num1 $num2 $num3 > val
swap /next/0 /ruleset/$val

swap num1 /curr/218
swap num2 /curr/219
swap num3 /curr/0
gosub value $num1 $num2 $num3 > val
swap /next/219 /ruleset/$val

swap n 0
!display
doif $n < 220
	doif /next/$n = 0
		print " "
	else
		print "@"
	fin
	sum n 1
	goto display
fin
@print `

swap n 0
!copy
doif $n < 220
	swap /curr/$n /next/$n
	sum n 1
	goto copy
fin

scan
swap n 1

goto genesis
ret


%value val1 val2 val3
int new 0
@print $val1 $val2 $val3 `
doif $val1 = 1
	sum new 1
fin
doif $val2 = 1
	sum new 2
fin
doif $val3 = 1
	sum new 4
fin
ret $new
